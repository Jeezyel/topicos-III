@page
@model A1.Pages.Carrinho.CarrinhoPageModel
@{
    ViewData["Title"] = "Meu Carrinho";
}

<h1>Meu Carrinho de Compras</h1>

@if (Model.Carrinho != null && Model.Carrinho.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Preço Unitário</th>
                <th>Quantidade</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Carrinho)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.PrecoUnitario.ToString("C")</td>
                    <td>@item.Quantidade</td>
                    <td>@item.Subtotal.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                <td class="fs-5 fw-bold">@Model.TotalCarrinho.ToString("C")</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-end mt-4">
        <a href="#" class="btn btn-primary btn-lg">Finalizar Pedido</a>
    </div>
}
else
{
    <div class="alert alert-info">
        Seu carrinho de compras está vazio.
    </div>
    <a asp-page="/Menu" class="btn btn-primary">Voltar ao Cardápio</a>
}