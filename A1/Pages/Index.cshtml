@page
@model IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao ExpoDeli</h1>
    <p>Confira as deliciosas sugestões que preparamos para você hoje!</p>
</div>

<hr />

<h2 class="text-center mb-4">Sugestão do Dia</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="my-0 fw-normal"><i class="bi bi-sun-fill"></i>Para almoço</h4>
            </div>
            <div class="card-body">
                @if (Model.SugestaoAlmoco != null)
                {
                <h3 class="card-title pricing-card-title">@Model.SugestaoAlmoco.Nome</h3>
                <p class="text-muted">@Model.SugestaoAlmoco.Descricao</p>
                <div class="mt-3 mb-4">
                    <span class="fs-5 text-decoration-line-through">@Model.SugestaoAlmoco.PrecoBase.ToString("C")</span>

                    <span class="fs-2 fw-bold ms-2">@((Model.SugestaoAlmoco.PrecoBase * 0.80).ToString("C"))</span>

                    <span class="badge bg-success ms-2">20% de desconto!</span>
                </div>
                <button type="button" class="w-100 btn btn-lg btn-outline-primary">Fazer Pedido</button>
                }
                else
                {
                <p class="lead">Ainda não temos uma sugestão para o almoço de hoje. Volte mais tarde!</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-dark text-white">
                <h4 class="my-0 fw-normal"><i class="bi bi-moon-stars-fill"></i>Para jantar</h4>
            </div>
            <div class="card-body">
                @if (Model.SugestaoJantar != null)
                {
                <h3 class="card-title pricing-card-title">@Model.SugestaoJantar.Nome</h3>
                <p class="text-muted">@Model.SugestaoJantar.Descricao</p>
                <div class="mt-3 mb-4">
                    <span class="fs-5 text-decoration-line-through">@Model.SugestaoJantar.PrecoBase.ToString("C")</span>

                    <span class="fs-2 fw-bold ms-2">@((Model.SugestaoJantar.PrecoBase * 0.80).ToString("C"))</span>

                    <span class="badge bg-success ms-2">20% de desconto!</span>
                </div>
                <button type="button" class="w-100 btn btn-lg btn-outline-primary">Fazer Pedido</button>
                }
                else
                {
                <p class="lead">Ainda não temos uma sugestão para o jantar de hoje. Volte mais tarde!</p>
                }
            </div>
        </div>
    </div>

    <hr />

    <button type="button" class="w-100 btn btn-lg btn-outline-primary" onclick="window.location.href='/Menu'">Ir Para o Cardápio</button>

</div>