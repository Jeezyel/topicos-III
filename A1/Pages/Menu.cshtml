@page
@model A1.Pages.MenuModel
@{
    ViewData["Title"] = "Cardápio";
}

<div class="text-center">
    <h1 class="display-4">Nosso Cardápio</h1>
    <p class="lead">Conheça os pratos deliciosos que preparamos para você.</p>
</div>

<hr />

<h2 class="mt-5 mb-4"><i class="bi bi-sun-fill"></i> Almoço</h2>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model.ItensAlmoco)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text text-muted">@item.Descricao</p>

                    @if (item.ItemIngredientes != null && item.ItemIngredientes.Any())
                    {
                        <p class="card-text"><small class="text-muted"><strong>Ingredientes:</strong> @string.Join(", ", item.ItemIngredientes.Select(ii => ii.Ingrediente.Nome))</small></p>
                    }

                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fs-4 fw-bold text-primary">@item.PrecoBase.ToString("C")</span>
                            <a asp-page="/Pedidos/Checkout" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Pedir Agora</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<h2 class="mt-5 mb-4"><i class="bi bi-moon-stars-fill"></i> Jantar</h2>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model.ItensJantar)
    {
        <div class="col">
