@page
@model A1.Pages.Admin.ControlePerfilModel
@{
    ViewData["Title"] = "Controle de Perfis";
}

<h1>Controle de Perfis</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Admin</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@(user.IsAdmin ? "Sim" : "Não")</td>
                <td>
                    @if (!user.IsAdmin)
                    {
                        <form method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" asp-page-handler="Promover" class="btn btn-primary">
                                Promover para Admin
                            </button>
                        </form>
                    }
                    else
                    {
                        <span>Já é Admin</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
