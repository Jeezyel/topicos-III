@page "{id:int}"
@model A1.Pages.Cardapio.DeleteModel
@{
    ViewData["Title"] = "Excluir Item";
}

<h1>Excluir</h1>
<h3>Você tem certeza que quer excluir este item?</h3>
<div>
    <h4>Item do Cardápio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ItemCardapio.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemCardapio.Nome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ItemCardapio.Descricao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemCardapio.Descricao)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ItemCardapio.PrecoBase)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemCardapio.PrecoBase)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ItemCardapio.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar para a Lista</a>
    </form>
</div>