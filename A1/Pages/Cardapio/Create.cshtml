@page
@model A1.Pages.Cardapio.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ItemCardapio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemCardapio.Nome" class="control-label"></label>
                <input asp-for="ItemCardapio.Nome" class="form-control" />
                <span asp-validation-for="ItemCardapio.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCardapio.Descricao" class="control-label"></label>
                <input asp-for="ItemCardapio.Descricao" class="form-control" />
                <span asp-validation-for="ItemCardapio.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCardapio.PrecoBase" class="control-label"></label>
                <input asp-for="ItemCardapio.PrecoBase" class="form-control" />
                <span asp-validation-for="ItemCardapio.PrecoBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCardapio.Periodo" class="control-label"></label>
                <select asp-for="ItemCardapio.Periodo" class="form-control" asp-items="Model.PeriodosOptions">
                    <option value="">-- Selecione o Período --</option>
                </select>
                <span asp-validation-for="ItemCardapio.Periodo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Ingredientes</label>
                <div class="p-2" style="border: 1px solid #ccc; border-radius: 5px; max-height: 200px; overflow-y: auto;">
                    
                    @for (var i = 0; i < Model.IngredientesOptions.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="IngredientesOptions[i].Id" />
                            <input type="hidden" asp-for="IngredientesOptions[i].Nome" />

                            @* O checkbox que o usuário vê e interage *@
                            <input type="checkbox" asp-for="IngredientesOptions[i].Selecionado" class="form-check-input" />

                            @* A label que mostra o nome do ingrediente *@
                            <label class="form-check-label" asp-for="IngredientesOptions[i].Selecionado">
                                @Model.IngredientesOptions[i].Nome
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}